#!/usr/bin/env bash

set -euo pipefail

PORTSFILE="$HOME/.local/etc/discretion.ports"

ALLOW_PORTS=(
    443 # HTTPS
    22  # SSH
    53  # DNS lookup
    123 # NTP time sync
)

STATEFILE="$HOME/.local/var/discretion.state"

read_portsfile() {
    if [[ -f "$PORTSFILE" ]]; then
        ALLOW_PORTS=($(readlines "$PORTSFILE"))
    fi
}

readlines() {
    grep -vP '^\s*$' "$1" | sed -r 's/#.*$//'
}

ensure_statedir() {
    local statedir="$(dirname "$STATEFILE")"

    [[ -d "$statedir" ]] || mkdir -p "$statedir"
}

savestate() {
    ensure_statedir

    echo "$1" > "$STATEFILE" || :
}

getstate() {
    cat "$STATEFILE"
}

activate() {
    local port

    read_portsfile

    echo "Locking outgoing, allowing ports: ${ALLOW_PORTS[*]}"
    sudo ufw default deny outgoing

    allow "${ALLOW_PORTS[@]}"

    savestate "activated"
}

deactivate() {
    echo "Unlocking outgoing"
    sudo ufw default allow outgoing

    savestate "deactivated"
}

allow() {
    local port

    for port in "$@"; do
        echo "-- $port"
        sudo ufw allow out "$port"
    done
}

revoke() {
    local port

    for port in "$@"; do
        echo "-- $port"
        sudo ufw delete allow out "$port"
    done
}

temp() {
    local timer
    local port
    
    if [[ "$UID" != 0 ]]; then
        exec sudo "$0" temp "$@"
    fi

    timer="${1:-}"; shift

    if [[ ! "$timer" =~ ^[0-9]+$ ]]; then
        echo "'$timer' is not a valid duration"
        exit 1
    fi

    allow "$@"

    # Revoke on any script exit
    # Including ^C
    REVOKES=("$@")
    temp_revoke() {
        revoke "${REVOKES[@]}"
    }
    trap temp_revoke EXIT

    echo "Reverting in $timer seconds"
    while [[ "$timer" -gt 0 ]]; do
        echo -n $'\r'"$timer"
        timer=$((timer-1))
        sleep 1
    done
    echo $'\r'"Restoring."
}

main() {
    local arg

    command="${1:-}"; shift || :

    if [[ -z "$command" ]]; then
        sudo ufw status verbose
        exit
    fi

    case "$command" in
    on)
        activate
        ;;
    off)
        deactivate
        ;;
    allow|revoke|temp)
        "$command" "$@"
        ;;
    last)
        getstate
        ;;
    *)
        echo "Unknown mode '$command'. Use 'on', 'off', 'allow PORTS...', 'revoke PORTS...', last"
        ;;
    esac
}

main "$@"
