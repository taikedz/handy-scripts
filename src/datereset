#!/usr/bin/env bbrun

set -euo pipefail

#%include std/out.sh
#%include std/isroot.sh
#%include std/config.sh

ensure_root() {
    if ! isroot; then
        sudo "$0" "$@"
        exit
    fi
}

reset_time() {
    systemctl stop ntp
    ntpdate -s "$TIMESERVER"
    systemctl start ntp
}

load_config() {
    local cresetconf

    config:declare cresetconf "/etc/datereset.conf" "$HOME/.config/datereset.conf"
    TIMESERVER="$(config:read cresetconf server)"

    out:info "Using timeserver $TIMESERVER"
}

main() {
    ensure_root "$@"

    load_config
    reset_time

    out:info "Done."
}

main "$@"
